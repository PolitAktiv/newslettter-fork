<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>zn-admin</portlet-name>
		<display-name></display-name>
		<portlet-class>net.zylk.liferay.portlet.newsletter.controller.NewsletterPortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<resource-bundle>net.zylk.liferay.portlet.resources.language</resource-bundle>
		<portlet-info>
			<title>Newslettter Administration</title>
			<short-title>zn-admin</short-title>
			<keywords>zn-admin</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>zn-user-subscription</portlet-name>
		<display-name></display-name>
		<portlet-class>net.zylk.liferay.portlet.user_subscription.controller.UserSubscriptionPortlet</portlet-class>
		<init-param>
			<name>add-process-action-success-action</name>
			<value>false</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<resource-bundle>net.zylk.liferay.portlet.resources.language</resource-bundle>
		<portlet-info>
			<title>Newslettter User Subscription Portlet</title>
			<short-title>zn-user-subscription</short-title>
			<keywords>zn-user-subscription</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>zn-subscription</portlet-name>
		<display-name></display-name>
		<portlet-class>net.zylk.liferay.portlet.subscription.controller.SubscriptionPortlet</portlet-class>
		<init-param>
			<name>check-auth-token</name>
			<value>false</value>
		</init-param>
		<init-param>
			<name>add-process-action-success-action</name>
			<value>false</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<resource-bundle>net.zylk.liferay.portlet.resources.language</resource-bundle>
		<portlet-info>
			<title>Newslettter Subscription Manager Portlet</title>
			<short-title>zn-subscription</short-title>
			<keywords>zn-subscription</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>